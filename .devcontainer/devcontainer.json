{
  "image": "braughtg/vnc-novnc-codespace-base:1.0.0",  
  "forwardPorts": [5901, 6901],
  "portsAttributes": {
    "5901": {
      "label": "VNC"
    },
    "6901": {
      "label": "NoVNC"
    }
  },
  "remoteUser": "student",
  "workspaceFolder": "/home/student",
  "overrideCommand": false,
  "initializeCommand": "echo 'Initialized command output here.'",
  "customizations": {
    "vscode": {
      "settings": {
        "tasks": {
          "version": "2.0.0",
          "tasks": [
            {
              "label": "Wait for noVNC",
              "type": "shell",
              "command": "./.contconf/waitForNoVNC.bash"
            },
            {
              "label": "Open noVNC in Browser",
              "command": "${input:openSimpleBrowser}",
            },
            {
              "label": "Open Linux Desktop",
              "type": "shell",
              "dependsOrder": "sequence",
              "dependsOn": [ "Wait for noVNC", "Open noVNC in Browser" ],
              "runOptions": {
                "runOn": "folderOpen"
              },
              "presentation": {
                "reveal": "always",
                "panel": "shared"
              }
            }
          ],
          "inputs": [
            {
              "id": "openSimpleBrowser",
              "type": "command",
              "command": "simpleBrowser.show",
              "args": ["https://${env:CODESPACE_NAME}-6901.app.github.dev"]
            }
          ]
        }
      }
    }
  }
}
