{
  "image": "braughtg/vnc-novnc-codespace-base:1.0.0",  
  "forwardPorts": [5901, 6901],
  "portsAttributes": {
    "5901": {
      "label": "VNC"
    },
    "6901": {
      "label": "NoVNC"
    }
  },
  "remoteUser": "student",
  "workspaceFolder": "/home/student",
  "overrideCommand": false,
  "customizations": {
    "vscode": {
      "settings": {
        "tasks": {
          "version": "2.0.0",
          "tasks": [
            {
              "label": "First",
              "type": "shell",
              "command": "echo 'First Task.'; sleep 5;",
              "presentation": {
                  "reveal": "always",
                  "panel": "new"
              },
              "runOptions": {
                  "runOn": "folderOpen"
              }
            },
            {
              "label": "Second",
              "type": "shell",
              "command": "echo 'Second Task.'",
              "presentation": {
                "reveal": "always",
                "panel": "shared"
              },
              "dependsOn": [ "First" ]
            }
          ]
        }
      }
    }
  }
}
